<div class="container">
  <h1 class="text-center">Danh Sách Các File Google Sheets</h1>

  <% if @google_sheets_files.present? %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th>Tên File</th>
        <th>Hành Động</th>
      </tr>
      </thead>
      <tbody>
      <% @google_sheets_files.each_with_index do |file, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= file.name %></td>
          <td>
            <%= link_to 'Xem Chi Tiết', google_sheet_path(file.id), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-warning text-center">
      <p>Không có file Google Sheets nào.</p>
    </div>
  <% end %>
</div>
